<article class="blog-post">
  <h2 class="display-5 link-body-emphasis mb-1"><%= article.title %></h2>
  <p class="blog-post-meta"><%= month_day_comma_year(article.created_at) %><a href="#"> Chris</a></p>
  <p><%= truncate(article.body, length: 150) %></p>

  <p><%= link_to 'Continue reading...', article, class: 'btn btn-link continue_reading'%></p>

    <%= link_to 'Edit', edit_article_path(article),
                    method: :get,
                    class: 'btn btn-secondary mb-1' %>
    <%= link_to "Destroy", article_path(article),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: 'btn btn-danger mb-1' %>

</article>
